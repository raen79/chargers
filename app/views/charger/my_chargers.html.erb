<!DOCTYPE html>
<html>
<head>
	<% title "Chargers - My Chargers" %>
</head>
<body>

<table style="width:70%">
  <tr>
    <th>Price</th>
    <th>Location</th>		
    <th>Phone</th>
    <th>Type</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <tr>
    <% @chargers.each do |c| %>
		<td> <%= c.price%> </td>
		<td> <%= c.location %> </td>
		<td> <%= c.phone %> </td>
		<td> <%= c.charger_type %> </td>
		<td><%= link_to 'Edit charger', edit_charger_path(:id => c.id) %></td>
		<td><%= button_to 'Delete Charger', delete_charger_path(:id => c.id), :method => :delete %></td>
	  </tr>
	<% end %>
</table>
<%= link_to 'New Charger', :new_charger %>

</body>
</html>

